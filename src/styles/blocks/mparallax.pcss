.mparallax {
  position: relative;

  height: 180vh;
  background: #fff;
}

.sec {
  position: absolute;
  height: 60vh;
  width: 100%;
  background-image: url('/src/images/para/bg_2sec.png');
  bottom: 0;
}

.parallax__layer {

  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

  &:nth-child(1) {
    .parallax__pic {

      // width: 100%;
      min-height: 27%;
      // height: 100%;
    }
  }

  &:nth-child(2) {
    .parallax__pic {

      left: 0;
      top: 19.5%;
      min-height: 16%;
    }
  }

  &:nth-child(3) {
    .parallax__pic {

      min-height: 20%;
      left: 0;
      top: 22%;
    }
  }

  &:nth-child(4) {
    .parallax__pic {

      left: 0;
      top: 37%;
      min-height: 23%;
    }
  }

  &:nth-child(5) {
    .parallax__pic {

      min-height: 20%;
      left: 0;
      // top: 41%;
      bottom: 40%;
    }
  }

  &:nth-child(6) {
    .parallax__pic {

      min-height: 22%;
      left: 0;
      bottom: 40%;
      // top: 41%;
    }
  }

  &:nth-child(7) {
    .parallax__pic {

      min-height: 100%;
      left: 0;
      top: 59.9%;
    }
  }
}

.parallax__pic {
  position: absolute;
  object-fit: cover;
  min-width: 100%;
  // width: 100%;
}